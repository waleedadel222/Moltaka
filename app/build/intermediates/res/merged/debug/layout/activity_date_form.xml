<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.university.moltaka.DateFormActivity"
    android:background="#cfc2c5c5" >

    <!-- Language -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="Languages : "
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#9f08479d"
        android:padding="5dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Your Languages "
        android:id="@+id/language_select"
        android:textSize="16dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#bdfcf6fc"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />


    <!-- Skills -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Skills :"
        android:id="@+id/textView3"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#9f08479d"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/skills"
        android:hint="Select Your Languages"
        android:padding="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#bdfcf6fc"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/language_select"
        android:layout_alignStart="@+id/language_select"
        android:layout_alignRight="@+id/language_select"
        android:layout_alignEnd="@+id/language_select" />

    <!-- Mobile -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="   Mobile : "
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#9f08479d"
        android:padding="5dp"
        android:layout_alignTop="@+id/mobile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobile"
        android:padding="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#bdfcf6fc"

        android:layout_alignLeft="@+id/language_select"
        android:layout_alignStart="@+id/language_select"
        android:layout_alignRight="@+id/language_select"
        android:layout_alignEnd="@+id/language_select" />

    <!-- submit -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submit_btn"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="#a561c278"
        android:textColor="#ffffffff"
        android:layout_below="@+id/skills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />


</RelativeLayout>
